{% doc %}
  @prompt
    Create a hero slider/slideshow section with the following features:
    - Multiple slides (at least 2-5 slides support)
    - Each slide should have separate desktop and mobile image options
    - Flexible height options: auto, small, medium, large, full-screen, and custom height
    - Section-level link option that makes the entire slider clickable
    - Optional link to open in new tab
    - Media overlay with gradient support and color customization
    - Color scheme support
    - Navigation arrows and dots for slide control
    - Autoplay option with configurable speed
    - Content alignment options (horizontal and vertical)
    - Top and bottom padding controls
    - Support for both images and videos in each slide
    - Responsive design that shows mobile-specific images on mobile devices
    - Smooth transitions between slides
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-slider-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: block;
    padding-top: {{ block.settings.padding_top }}px;
    padding-bottom: {{ block.settings.padding_bottom }}px;
  }

  .ai-hero-slider-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    {% if block.settings.height == 'auto' %}
      height: auto;
    {% elsif block.settings.height == 'small' %}
      height: 400px;
    {% elsif block.settings.height == 'medium' %}
      height: 550px;
    {% elsif block.settings.height == 'large' %}
      height: 700px;
    {% elsif block.settings.height == 'fullscreen' %}
      height: 100vh;
    {% elsif block.settings.height == 'custom' %}
      height: {{ block.settings.custom_height }}px;
    {% endif %}
  }

  .ai-hero-slider-slides-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .ai-hero-slide-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.6s ease-in-out, visibility 0.6s ease-in-out;
  }

  .ai-hero-slide-{{ ai_gen_id }}.active {
    opacity: 1;
    visibility: visible;
    z-index: 1;
  }

  .ai-hero-slide-media-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .ai-hero-slide-media-{{ ai_gen_id }} img,
  .ai-hero-slide-media-{{ ai_gen_id }} video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-hero-slide-media-{{ ai_gen_id }} .ai-hero-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-slide-media-{{ ai_gen_id }} .ai-hero-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-slide-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    {% if block.settings.overlay_gradient %}
      background: linear-gradient({{ block.settings.gradient_direction }}, {{ block.settings.overlay_color_start }}, {{ block.settings.overlay_color_end }});
    {% else %}
      background-color: {{ block.settings.overlay_color }};
    {% endif %}
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .ai-hero-slide-content-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: {{ block.settings.vertical_alignment }};
    justify-content: {{ block.settings.horizontal_alignment }};
    z-index: 2;
    padding: 40px 20px;
  }

  .ai-hero-nav-arrows-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 3;
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding: 0 20px;
    pointer-events: none;
  }

  .ai-hero-nav-arrow-{{ ai_gen_id }} {
    width: 48px;
    height: 48px;
    background-color: {{ block.settings.arrow_background }};
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: auto;
    transition: background-color 0.3s ease;
  }

  .ai-hero-nav-arrow-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.arrow_hover_background }};
  }

  .ai-hero-nav-arrow-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
    stroke: {{ block.settings.arrow_color }};
    stroke-width: 2;
  }

  .ai-hero-nav-dots-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
    display: flex;
    gap: 10px;
  }

  .ai-hero-nav-dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    opacity: 0.5;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .ai-hero-nav-dot-{{ ai_gen_id }}.active {
    opacity: 1;
    transform: scale(1.2);
  }

  .ai-hero-slide-link-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-slider-container-{{ ai_gen_id }} {
      {% if block.settings.height == 'small' %}
        height: 300px;
      {% elsif block.settings.height == 'medium' %}
        height: 400px;
      {% elsif block.settings.height == 'large' %}
        height: 500px;
      {% elsif block.settings.height == 'custom' %}
        height: {{ block.settings.custom_height_mobile }}px;
      {% endif %}
    }

    .ai-hero-slide-media-{{ ai_gen_id }} .desktop-media {
      display: none;
    }

    .ai-hero-nav-arrow-{{ ai_gen_id }} {
      width: 40px;
      height: 40px;
    }

    .ai-hero-nav-arrow-{{ ai_gen_id }} svg {
      width: 20px;
      height: 20px;
    }
  }

  @media screen and (min-width: 750px) {
    .ai-hero-slide-media-{{ ai_gen_id }} .mobile-media {
      display: none;
    }
  }
{% endstyle %}

<hero-slider-{{ ai_gen_id }} class="ai-hero-slider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-slider-container-{{ ai_gen_id }}">
    <div class="ai-hero-slides-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
          assign desktop_image_key = 'slide_' | append: i | append: '_desktop_image'
          assign mobile_image_key = 'slide_' | append: i | append: '_mobile_image'
          assign video_key = 'slide_' | append: i | append: '_video'

          assign slide_enabled = block.settings[slide_enabled_key]
          assign desktop_image = block.settings[desktop_image_key]
          assign mobile_image = block.settings[mobile_image_key]
          assign video = block.settings[video_key]
        %}

        {% if slide_enabled %}
          <div class="ai-hero-slide-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" data-slide-index="{{ forloop.index0 }}">
            <div class="ai-hero-slide-media-{{ ai_gen_id }}">
              {% if video != blank %}
                <video autoplay muted loop playsinline>
                  <source src="{{ video }}" type="video/mp4">
                </video>
              {% else %}
                {% if desktop_image != blank %}
                  <img
                    src="{{ desktop_image | image_url: width: 2000 }}"
                    alt="{{ desktop_image.alt | escape }}"
                    loading="lazy"
                    width="{{ desktop_image.width }}"
                    height="{{ desktop_image.height }}"
                    class="desktop-media"
                  >
                {% else %}
                  <div class="ai-hero-placeholder-{{ ai_gen_id }} desktop-media">
                    {{ 'hero-apparel-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}

                {% if mobile_image != blank %}
                  <img
                    src="{{ mobile_image | image_url: width: 1000 }}"
                    alt="{{ mobile_image.alt | escape }}"
                    loading="lazy"
                    width="{{ mobile_image.width }}"
                    height="{{ mobile_image.height }}"
                    class="mobile-media"
                  >
                {% elsif desktop_image != blank %}
                  <img
                    src="{{ desktop_image | image_url: width: 1000 }}"
                    alt="{{ desktop_image.alt | escape }}"
                    loading="lazy"
                    width="{{ desktop_image.width }}"
                    height="{{ desktop_image.height }}"
                    class="mobile-media"
                  >
                {% else %}
                  <div class="ai-hero-placeholder-{{ ai_gen_id }} mobile-media">
                    {{ 'hero-apparel-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              {% endif %}
            </div>

            <div class="ai-hero-slide-overlay-{{ ai_gen_id }}"></div>

            <div class="ai-hero-slide-content-{{ ai_gen_id }}">
            </div>

            {% if block.settings.section_link != blank %}
              <a 
                href="{{ block.settings.section_link }}" 
                class="ai-hero-slide-link-{{ ai_gen_id }}"
                {% if block.settings.open_in_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}
                aria-label="View slide {{ forloop.index }}"
              ></a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if block.settings.show_arrows %}
      <div class="ai-hero-nav-arrows-{{ ai_gen_id }}">
        <button class="ai-hero-nav-arrow-{{ ai_gen_id }} ai-hero-prev-{{ ai_gen_id }}" aria-label="Previous slide">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none">
            <path d="M15 18l-6-6 6-6" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <button class="ai-hero-nav-arrow-{{ ai_gen_id }} ai-hero-next-{{ ai_gen_id }}" aria-label="Next slide">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none">
            <path d="M9 18l6-6-6-6" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
    {% endif %}

    {% if block.settings.show_dots %}
      <div class="ai-hero-nav-dots-{{ ai_gen_id }}">
        {% for i in (1..5) %}
          {% liquid
            assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
            assign slide_enabled = block.settings[slide_enabled_key]
          %}
          {% if slide_enabled %}
            <button 
              class="ai-hero-nav-dot-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" 
              data-slide-index="{{ forloop.index0 }}"
              aria-label="Go to slide {{ forloop.index }}"
            ></button>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</hero-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class HeroSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.slides = [];
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.slides = Array.from(this.querySelectorAll('.ai-hero-slide-{{ ai_gen_id }}'));
        this.dots = Array.from(this.querySelectorAll('.ai-hero-nav-dot-{{ ai_gen_id }}'));
        this.prevButton = this.querySelector('.ai-hero-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-hero-next-{{ ai_gen_id }}');

        this.setupEventListeners();
        
        {% if block.settings.autoplay %}
          this.startAutoplay();
        {% endif %}
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.previousSlide());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.nextSlide());
        }

        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.goToSlide(index));
        });

        this.addEventListener('mouseenter', () => this.pauseAutoplay());
        this.addEventListener('mouseleave', () => {
          {% if block.settings.autoplay %}
            this.startAutoplay();
          {% endif %}
        });
      }

      goToSlide(index) {
        this.slides[this.currentSlide].classList.remove('active');
        if (this.dots[this.currentSlide]) {
          this.dots[this.currentSlide].classList.remove('active');
        }

        this.currentSlide = index;

        this.slides[this.currentSlide].classList.add('active');
        if (this.dots[this.currentSlide]) {
          this.dots[this.currentSlide].classList.add('active');
        }
      }

      nextSlide() {
        const nextIndex = (this.currentSlide + 1) % this.slides.length;
        this.goToSlide(nextIndex);
      }

      previousSlide() {
        const prevIndex = (this.currentSlide - 1 + this.slides.length) % this.slides.length;
        this.goToSlide(prevIndex);
      }

      startAutoplay() {
        this.pauseAutoplay();
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, {{ block.settings.autoplay_speed }} * 1000);
      }

      pauseAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      disconnectedCallback() {
        this.pauseAutoplay();
      }
    }

    customElements.define('hero-slider-{{ ai_gen_id }}', HeroSlider{{ ai_gen_id }});
  })();
</script>

